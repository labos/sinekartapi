					<show id="skpi:stato" />
					<show id="skpi:tipo" />
					<show id="skpi:motivo" />
					<show id="skpi:dataAnnullamento" />
					<show id="skpi:utenteAnnullante" />
				</field-visibility>

			</form>
		</forms>

	</config>


